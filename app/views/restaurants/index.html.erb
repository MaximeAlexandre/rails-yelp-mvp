<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-6 bg-white border d-flex flex-column align-items-center pt-2">
      <h1 class="mb-5">
        Restaurants List
        <small>
          <%= link_to new_restaurant_path(@restaurant) do %><i class="fa fa-plus ml-4"></i><% end %>
        </small>
      </h1>

      <% @restaurants.each do |restaurant| %>
        <ul>
          <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
